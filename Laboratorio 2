#include "stdlib.h"

using namespace std;


int sumaInpar(int num )
{ int acu = 1,cont = 1;
if(num != 1){
do{ 
acu = acu + 2; 
cont++;
}while(cont < num);

}
else if( num == 1){ 
return (acu);
}
else { return (0);}
return(acu);
}
int sumaPar(int num){
int acu = 0,cont = 1;

if(num != 1)
{ do{ acu = acu + 2;
cont++;
}
while(cont < num);

}
else if( num == 1)
{ return (acu);}
else{ return (0);} 
return(acu);
}
int sumaInparW(int num ){
int acu = 1,cont = 1;
while(cont < num)
{ 
acu = acu + 2;
cont++;
}
return (acu);

}
int main()
